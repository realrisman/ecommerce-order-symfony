{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Image</th>
            <th>Thumbnail</th>
            <th>Category</th>
            <th>Url</th>
            <th>Upc</th>
            <th>Gtint14</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.subtitle }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.thumbnail }}</td>
                <td>{{ product.category ? product.category|json_encode : '' }}</td>
                <td>{{ product.url }}</td>
                <td>{{ product.upc }}</td>
                <td>{{ product.gtint14 }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
