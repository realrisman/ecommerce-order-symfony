{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ product.title }}</td>
        </tr>
        <tr>
            <th>Subtitle</th>
            <td>{{ product.subtitle }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ product.image }}</td>
        </tr>
        <tr>
            <th>Thumbnail</th>
            <td>{{ product.thumbnail }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ product.category ? product.category|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ product.url }}</td>
        </tr>
        <tr>
            <th>Upc</th>
            <td>{{ product.upc }}</td>
        </tr>
        <tr>
            <th>Gtint14</th>
            <td>{{ product.gtint14 }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
